services:

  saywe_db:
    container_name: saywe_db
    image: postgres:17
    command: postgres -c 'max_connections=250'
    restart: unless-stopped
    env_file:
      - ./env/.env.db
    volumes:
      - ./data/postgresql_data:/var/lib/postgresql/data
    ports:
      - "8700:5432"
    networks:
      - saywe_network 

