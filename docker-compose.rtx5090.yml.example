services:
  saywe_db:
    container_name: saywe_db
    image: postgres:17
    command: postgres -c 'max_connections=250'
    restart: unless-stopped
    env_file:
      - ./env/.env.db
    volumes:
      - ./data/postgresql_data:/var/lib/postgresql/data
    ports:
      - "8700:5432"
    networks:
      - saywe_network

  saywe_backend:
    container_name: saywe_backend
    volumes:
      - ./uploads:/app/uploads
      - ./logs:/app/logs
    build:
      context: .
      dockerfile: Dockerfile.rtx5090
    restart: unless-stopped
    ports:
      - "8701:8000"
    env_file:
      - ./env/.env.docker
    depends_on:
      - saywe_db
    networks:
      - saywe_network
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: all
              capabilities: [gpu]

  saywe_ollama:
    image: ollama/ollama
    container_name: saywe_ollama
    tty: true
    restart: always
    ports:
     - 11434:11434
    volumes:
      - ./data/ollama:/root/.ollama
    networks:
      - saywe_network
    extra_hosts:
      - "host.docker.internal:host-gateway"
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: all
              capabilities: [gpu]

networks:
  saywe_network:
    name: saywe_network
    driver: bridge
